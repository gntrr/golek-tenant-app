APP_NAME=GolekTenant
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# Set correct URL to avoid CORS
# Eg. http://localhost:8000, http://localhost, or https://your-domain.com
APP_URL=http://localhost

LIVEWIRE_TMP_UPLOADS_DISK=local

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=db_golek_tenant
DB_USERNAME=postgres
DB_PASSWORD=

# Midtrans configuration
MIDTRANS_SERVER_KEY=<server_key_sandbox>
MIDTRANS_CLIENT_KEY=<client_key_sandbox>
MIDTRANS_IS_PRODUCTION=false

BROADCAST_DRIVER=log
CACHE_DRIVER=file
# Storage configuration - Choose between local and s3 storage
# For local storage: FILESYSTEM_DISK=local
# For S3 bucket storage: FILESYSTEM_DISK=s3 (and configure AWS settings below)
FILESYSTEM_DISK=local

# Change queue connection to database
# QUEUE_CONNECTION=sync
QUEUE_CONNECTION=database

SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# SMTP Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-username
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="your-email@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (only required if FILESYSTEM_DISK=s3)
# Uncomment and configure these settings when using S3 bucket storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
